{
  "printWidth": 120,
  "singleQuote": true,
  "semi": false,
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "plugins": ["prettier-plugin-astro", "@ianvs/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
  "importOrder": ["^(astro|@astrojs)(.*)$", "", "^[a-zA-Z]+(.*)$", "^@[a-z]+/(.*)$", "^@assets/(.*)$"]
}
