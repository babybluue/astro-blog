<div id="search"></div>

<script>
  import { PagefindUI } from '@pagefind/default-ui'

  const isDev = import.meta.env.DEV
  document.addEventListener('astro:page-load', () => {
    if (!document.querySelector('#search')) {
      return
    }
    new PagefindUI({
      element: '#search',
      showSubResults: true,
      bundlePath: isDev ? '/dist/pagefind/' : '/pagefind/',
      resetStyles: false,
      excerptLength: 50,
      processResult: function (result: any) {
        console.log(result)
        if (result.sub_results.length) {
          result.sub_results.forEach((sub_result: any) => {
            if (sub_result.title === result.meta.title) {
              sub_result.title = ''
            }
            const urlArr = sub_result.url.split('/').slice(-3)
            sub_result.url = urlArr[0] + '/' + urlArr[1] + urlArr[2]
          })
        }
        result.url = result.url.split('/').slice(-3, -1).join('/')
        return result
      },
    })
  })
</script>

