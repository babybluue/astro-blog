---
import BaseHead from '@components/base-head.astro'
import ContentRender from '@components/content-render.astro'
import NavHead from '@components/nav-head.astro'
import type { PostModel } from '@interfaces/post-model'
import { getAllPosts } from '@utils/all-posts'

interface Props {
  post: PostModel
  prev: PostModel | undefined
  next: PostModel | undefined
}

export async function getStaticPaths() {
  const posts = await getAllPosts()
  return posts.map((post, index) => ({
    params: { slug: post.data.abbrlink },
    props: { post, prev: posts[index - 1], next: posts[index + 1] },
  }))
}

const { post, prev, next } = Astro.props
---

<html lang="zh">
  <BaseHead title={post.data.title} description={post.data.descriptions ?? ''} />
  <body>
    <NavHead />
    <main class="flex flex-col justify-between">
      <div>
        <h1>{post.data.title}</h1>
        <ContentRender post={post} />
      </div>

      <div class="mt-5 flex justify-between gap-3">
        {prev ? <a href={'posts/' + prev.data.abbrlink}>{prev.data.title}</a> : <span />}
        {next ? <a href={'posts/' + next.data.abbrlink}>{next.data.title}</a> : <span />}
      </div>
    </main>
  </body>
</html>
