              <span class="text-[#6e6f72]"> use --host to expose</span>
            </p>
          </div>
        </div>
      </div>
      <div id="typed" class="flex flex-col gap-2"></div>
    </section>
  </main>

  <script>
    import Typed from 'typed.js'

    document.addEventListener('astro:page-load', () => {
      new Typed('#typed', {
        stringsElement: '#typed-strings',
        typeSpeed: 1,
        backSpeed: 0,
        loop: false,
        fadeOut: true,
      })
    })

    document.addEventListener('astro:after-swap', () => {
      const typed = document.querySelector('#typed-strings')
      if (typed) {
        typed.setAttribute('style', 'height:1px;width:1px;overflow:hidden')
      }
    })
  </script>
</BaseLayout>
