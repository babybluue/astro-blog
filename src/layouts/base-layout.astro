---
import ReloadPrompt from '@components/basic/reload-prompt.astro'
import BaseHead from '@components/html-head.astro'

const { title, description, cover } = Astro.props.frontmatter || Astro.props
---

<html lang="zh">
  <BaseHead title={title} description={description} cover={cover ? cover.src : null} />
  <body transition:animate="none" class="bg-primary-light text-primary-dark dark:bg-primary-dark dark:text-white">
    <slot />
    <ReloadPrompt transition:persist />
  </body>
</html>
